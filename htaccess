# Restrict WordPress login to Partners IP only
<Files ~ "^wp-login.php">
Order deny,allow
Deny from all
# Partners public addresses
Allow from 170.223.0.0/16
# DFCI public and Partners VPN addresses
Allow from 155.52.0.0/16
# MGH public addresses
Allow from 132.183.0.0/16
# Partners private addresses
Allow from 172.16.0.0/12
# Partners wireless addresses
Allow from 10.0.0.0/8
# MEEI
Allow from 205.166.145.0/24
</Files>

# Block WordPress xmlrpc.php requests
<Files xmlrpc.php>
order deny,allow
deny from all
</Files>

